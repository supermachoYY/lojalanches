<%- include('../partials/header') %>

<div class="container">
  <h1 class="title">Usu치rios Cadastrados</h1>

  <form method="get" action="/usuario" class="search-bar">
    <input 
      type="text" 
      name="busca" 
      value="<%= busca %>" 
      placeholder="Pesquisar por nome..."
    >
    <button type="submit">Buscar</button>
  </form>

  <div class="actions">
    <a href="/usuario/add" class="btn btn-add">+ Adicionar Usu치rio</a>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Email</th>
      </tr>
    </thead>

    <tbody>
      <% usuarios.forEach(u => { %>
        <tr>
          <td><%= u.nome %></td>
          <td><%= u.email %></td>
          <td>
            <a href="/usuario/edit/<%= u._id %>" class="btn btn-edit">Editar</a>
            <a href="/usuario/delete/<%= u._id %>" class="btn btn-delete" onclick="return confirm('Excluir este usu치rio?')">Excluir</a>
          </td>
        </tr>
      <% }) %>

      <% if (usuarios.length === 0) { %>
        <tr>
          <td colspan="3" class="empty">Nenhum usu치rio encontrado.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include('../partials/footer') %>

<%- include('../partials/header') %>

<div class="container form-container">
  <h1 class="title">Editar Usuário</h1>

  <form action="/usuario/edit/<%= usuario._id %>" method="post">
    
    <div class="form-group">
      <label>Nome:</label>
      <input 
        type="text" 
        name="nome" 
        value="<%= usuario.nome %>" 
        required
      >
    </div>

    <div class="form-group">
      <label>Email:</label>
      <input 
        type="email" 
        name="email" 
        value="<%= usuario.email %>" 
        required
      >
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-save">Salvar Alterações</button>
      <a href="/usuario" class="btn btn-back">Voltar</a>
    </div>

  </form>
</div>

<%- include('../partials/footer') %>

<%- include('../partials/header') %>

<div class="container mt-4">
  <h1>Meu Pedido</h1>

  <% if (!pedido || pedido.itens.length === 0) { %>
    <p>Nenhum item no pedido.</p>
  <% } else { %>

    <table class="table">
      <thead>
        <tr>
          <th>Lanche</th>
          <th>Qtd</th>
          <th>Valor</th>
          <th>Ação</th>
        </tr>
      </thead>

      <tbody>
        <% pedido.itens.forEach(i => { %>
          <tr>
            <td><%= i.lanche ? i.lanche.nome : "Removido" %></td>
            <td><%= i.quantidade %></td>
            <td>R$ <%= i.subtotal.toFixed(2) %></td>

            <td>
              <a class="btn btn-danger btn-sm"
                 href="/pedido/removeItem/<%= pedido._id %>/<%= i._id %>">
                 Remover
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <h3 class="mt-3">Total: R$ <%= pedido.total.toFixed(2) %></h3>

    <a href="/pedido/finalizar/<%= pedido._id %>"
       class="btn btn-success mt-3">
       Finalizar Compra
    </a>

  <% } %>
</div>

<%- include('../partials/footer') %>
